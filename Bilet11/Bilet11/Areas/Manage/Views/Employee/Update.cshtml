
@{
    ViewData["Title"] = "Update";
}

@model UpdateEmployeeVM
<div class="content-wrapper">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Employee information</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" class="form-control" placeholder="Surname">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div><img width="300" height="300" src="~/assets/images/@ViewBag.Image"/></div>
                    <div class="form-group">
                        <label asp-for="Image">Select new image</label>
                        <input accept="image/" asp-for="Image" class="form-control" placeholder="Image">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PositionId"></label>
                        <select class="form-control" asp-for="PositionId" asp-items="@ViewBag.Positions">
                            <option disabled>Select a position</option>
                        </select>
                        <span asp-validation-for="PositionId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FbLink">Facebook</label>
                        <input asp-for="FbLink" class="form-control" placeholder="Fb">
                        <span asp-validation-for="FbLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InstagramLink">Instagram</label>
                        <input asp-for="InstagramLink" class="form-control" placeholder="Instagram">
                        <span asp-validation-for="InstagramLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TwitterLink">Twitter</label>
                        <input asp-for="TwitterLink" class="form-control" placeholder="Twitter">
                        <span asp-validation-for="TwitterLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LinkedinLink">Linkedin</label>
                        <input asp-for="LinkedinLink" class="form-control" placeholder="LinkedinLink">
                        <span asp-validation-for="LinkedinLink" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>